{
  "compilerOptions": {
    "target": "es6",
    "module": "amd",
    "strict": true,
    "outFile": "./dev/main.js",
    "outDir": "./dev",
    "rootDir": "./src",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "sourceRoot": "/src"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
